<nta>
	<declaration>// Place global declarations here.

const int N = 2;
typedef int [0, N-1] id_t;

int [0,2] count;
chan barber_free[N];
chan haircut_done[N];
broadcast chan barber_wakeup;

id_t customers[N+1];

void enqueue(id_t element){
    customers[count++] = element;
}

void dequeue(){
    int i = 0;
    count -= 1;
    while(i &lt; count){
        customers[i] = customers[i+1];
    }
    customers[i] = 0;
}

id_t front(){
return customers[0];
}

id_t last(){
    return customers[count-1];
}</declaration>
	<template>
		<name>Barber</name>
		<declaration>clock b_time;</declaration>
		<location id="id0" x="-119" y="8">
		</location>
		<location id="id1" x="0" y="0">
			<urgent/>
		</location>
		<location id="id2" x="-119" y="68">
			<name x="-161" y="76">HC_Done</name>
			<committed/>
		</location>
		<location id="id3" x="0" y="68">
			<name x="8" y="76">cutting_hair</name>
		</location>
		<location id="id4" x="0" y="-59">
			<name x="-10" y="-93">sleeping</name>
		</location>
		<init ref="id4"/>
		<transition>
			<source ref="id0"/>
			<target ref="id4"/>
			<label kind="guard" x="-101" y="-59">count == 0</label>
		</transition>
		<transition>
			<source ref="id0"/>
			<target ref="id3"/>
			<label kind="guard" x="-102" y="-8">count &gt; 0</label>
			<label kind="synchronisation" x="-102" y="8">barber_free[front()]!</label>
		</transition>
		<transition>
			<source ref="id2"/>
			<target ref="id0"/>
			<label kind="synchronisation" x="-119" y="21">haircut_done[front()]!</label>
		</transition>
		<transition>
			<source ref="id1"/>
			<target ref="id3"/>
			<label kind="select" x="17" y="0">e : id_t</label>
			<label kind="synchronisation" x="8" y="17">barber_free[front()]!</label>
			<label kind="assignment" x="17" y="34">b_time := 0</label>
			<nail x="0" y="25"/>
		</transition>
		<transition>
			<source ref="id3"/>
			<target ref="id2"/>
		</transition>
		<transition>
			<source ref="id4"/>
			<target ref="id1"/>
			<label kind="synchronisation" x="0" y="-46">barber_wakeup?</label>
		</transition>
	</template>
	<template>
		<name x="5" y="5">Customer</name>
		<parameter>const id_t id</parameter>
		<declaration>// Place local declarations here.
clock time;
</declaration>
		<location id="id5" x="298" y="170">
			<name x="238" y="153">leaving</name>
			<urgent/>
		</location>
		<location id="id6" x="527" y="221">
			<name x="510" y="187">haircut</name>
		</location>
		<location id="id7" x="374" y="289">
			<name x="272" y="272">waiting_room</name>
		</location>
		<location id="id8" x="374" y="204">
			<name x="391" y="187">enter</name>
			<urgent/>
		</location>
